%span Players
%form{:action => '/search', :method => 'get'}
  %select{:name => 'server', :value => params[:server]}
    - ["All Servers", *ServerHelper.all_servers].each do |s|
      - if params[:server] && params[:server] == s
        %option{:value => s, :selected => true}= s
      - else
        %option{:value => s}= s

  %input{:name => 'character', :type => 'text', :value => params[:player]}
  %input{:type => 'submit'}
  %span{"data-tippy-content" => haml(:_search_help), :class => "tippy"} ?

